<div>
  <% if (numbers && numbers.length > 0) { %>
  <table class="table">
    <thead>
      <tr>
        <th>Number</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% for ( const number of numbers ) { %>
        <tr>
          <td><%= number.phone_number %></td>
          <td><a href="/numbers/<%= number.id %>">Details</a></td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <% } else { %>
    <div>
      No numbers present. <a href="/numbers/purchase">Purchase a number.</a>
    </div>
  <% } %>
</div>